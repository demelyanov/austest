@model LoginViewModel
@{
    ViewData["Title"] = "Login - AusTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <div class="panel panel-default" style="margin-top: 50px;">
            <div class="panel-heading">
                <h3 class="panel-title">Login</h3>
            </div>
            <div class="panel-body">
                <form id="login-frm" class="" method="post" action="/account/login">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.ReturnUrl)
                    @if (Model.NotFound)
                    {
                    <div class="alert alert-danger" id="not-found">
                        Invalid login attempt.
                    </div>
                    }
                    <div class="form-group">
                        <label for="">Username</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, null, new { @class = "" })
                    </div>
                    <div class="form-group">
                        <label for="">Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "" })
                    </div>
                    <div class="form-check">
                        <!--input class="form-check-input" type="checkbox" value="" id="RememberMe" -->
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                        <label class="form-check-label" for="RememberMe">
                            Remember Me
                        </label>
                    </div>
                    <div class="form-group">
                        <!-- a hewf="#" class="pull-left">Forgot password?</a -->
                        <button class="btn btn-primary pull-right">Log In</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


