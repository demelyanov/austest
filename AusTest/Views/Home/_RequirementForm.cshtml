@model RequirementDto

<div class="modal fade" id="req-dlg" tabindex="-1" role="dialog" aria-labelledby="req-frm">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center" role="document">
            <div class="modal-content ">
                <form action="/home/item" method="post" id="login-frm">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
                        <h4 class="modal-title">@(0 == Model.Id ? "Create" : "Edit") Requirement</h4>
                    </div>
                    <div class="modal-body">
                        @Html.HiddenFor(m => m.Id)
                        <div class="form-group">
                            <label class="control-label">Name</label>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                        <div class="form-group">
                            <label class="control-label"></label>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-default" id="btn-close" data-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary" id="btn-save">@(0 == Model.Id ? "Create" : "Update")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
